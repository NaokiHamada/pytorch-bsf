name: pytorch-bsf
conda_env: conda.yaml
entry_points:
  main:
    parameters:
      data: {type: path}
      label: {type: path}
      degree: {type: int}
      header: {type: int, default: 0}
      delimiter: {type: string, default: " "}
      normalize: {type: string, default: none}
      split_ratio: {type: float, default: 0.5}
      batch_size: {type: int, default: 0}
      max_epochs: {type: int, default: 1000}
      accelerator: {type: string, default: auto}
      devices: {type: int, default: 1}
      num_nodes: {type: int, default: 1}
      strategy: {type: string, default: auto}
      loglevel: {type: int, default: 2}
    command: >
      python -m torch_bsf
      --data={data}
      --label={label}
      --degree={degree}
      --header={header}
      --delimiter={delimiter}
      --normalize={normalize}
      --split_ratio={split_ratio}
      --batch_size={batch_size}
      --max_epochs={max_epochs}
      --accelerator={accelerator}
      --devices={devices}
      --num_nodes={num_nodes}
      --strategy={strategy}
      --loglevel={loglevel}
